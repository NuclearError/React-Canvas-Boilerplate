{
  "extends": "airbnb",
  "env": {
    "browser": true,
    "node": true,
    "mocha": true,
    "jest": true
  },
  "globals": {
  },
  "rules": {
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "react/prefer-stateless-function": [0],
    "class-methods-use-this": [0],
    "padded-blocks": [0],
    "no-useless-constructor": [0],
    "no-plusplus": [0],
    "import/no-extraneous-dependencies": [
      'error', {
        devDependencies: [
          ".storybook/**",
          "**/*.stories.js",
          "**/*.test.js"
        ]
      }
    ]
  },
  "settings": {
    "import/resolver": {
      "webpack": {
        "config": ".webpack.config.js"
      }
    }
  }
}
